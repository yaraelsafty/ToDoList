<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_status">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_task"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"/>


        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_status"
                android:textStyle="bold|italic"
                android:padding="10dp"
                android:textSize="17dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_alignBottom="@+id/tv_show_task"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_calender"
            android:id="@+id/imageView"
            android:layout_below="@+id/tv_show_task"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_show_date"
            android:textStyle="bold|italic"
            android:textSize="12dp"
            android:padding="10dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_alarm"
            android:id="@+id/imageView2"
            android:layout_alignTop="@+id/tv_show_date"
            android:layout_toEndOf="@+id/tv_show_date"
            android:layout_marginStart="16dp" />

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_time"
                android:textStyle="bold|italic"
                android:padding="10dp"
                android:textSize="12dp"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginStart="12dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
